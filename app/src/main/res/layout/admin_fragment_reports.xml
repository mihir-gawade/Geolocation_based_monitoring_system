<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".admin.Fragments.ReportsFragment">

    <!-- Filters -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter Reports"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <EditText
            android:id="@+id/date_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Select Date Range"
            android:drawableEnd="@drawable/ic_home"/>

        <Spinner
            android:id="@+id/department_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/departments"/>
    </LinearLayout>

    <!-- Report Types -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Report Type"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="16dp"/>

    <RadioGroup
        android:id="@+id/report_type_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_attendance_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attendance Report" />

        <RadioButton
            android:id="@+id/rb_performance_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Performance Report" />

        <RadioButton
            android:id="@+id/rb_leave_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave Report" />
    </RadioGroup>

    <!-- Data Visualization -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Analytics"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="16dp"/>

    <ImageView
        android:id="@+id/chart_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/ic_home"
        android:scaleType="fitCenter"/>

    <!-- Export Options -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Export and Download"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <Button
            android:id="@+id/export_pdf"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Export PDF"/>

        <Button
            android:id="@+id/export_excel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Export Excel"/>

        <Button
            android:id="@+id/print_report"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Print"/>
    </LinearLayout>

</LinearLayout>
