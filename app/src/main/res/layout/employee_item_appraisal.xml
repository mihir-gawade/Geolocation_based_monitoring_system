<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_marginVertical="4dp">

    <!-- Appraisal Date -->
    <TextView
        android:id="@+id/appraisalDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: 01-Jan-2024"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Appraisal Status -->
    <TextView
        android:id="@+id/appraisalStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pending"
        android:textSize="16sp"
        android:textColor="@android:color/holo_orange_dark"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"/>

    <!-- Appraisal Comments -->
    <TextView
        android:id="@+id/appraisalComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Comment: Performance improvement needed"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/appraisalDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
