<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeAppraisalActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/employeeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Appraisals"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"/>

    <!-- RecyclerView to display applied appraisals -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/employeeAppraisalList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/employeeTitle"
        app:layout_constraintBottom_toTopOf="@id/applyAppraisalButton"
        android:padding="8dp"/>

    <!-- Apply for Appraisal Button -->
    <Button
        android:id="@+id/applyAppraisalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply for Appraisal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
